extends layout

include _includes/sharedHtmlFunctions

block content
    .page-header
        h1=pageHeader
    
    .table-responsive
        table.table.table-bordered.table-striped.table-hover
            thead.bg-primary
                tr
                    th Name
                    th Date of Birth
                    th Age
                    th Sex
                    th Phone number(s)
            tbody
                each patient in patients
                    tr
                        td=patient.name
                        td
                            +getFormattedDate(patient.dob)
                        td=patient.age
                        td=patient.sex
                        td
                            each phone in patient.contact.phones
                                | <a href="tel:#{phone}">#{phone}</a> <br />