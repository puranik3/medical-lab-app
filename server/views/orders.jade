extends layout

include _includes/sharedHtmlFunctions

block pagestyles
    link(rel='stylesheet', href='/css/page-styles/orders.css')

block pagescripts
    script(src='/js/services/crud.js')
    script(src='/js/services/patient.js')
    script(src='/js/page-scripts/orders.js')

block content
    .page-header
        h1 #{pageHeader}
    
    .table-responsive
        table.table.table-bordered.table-striped.table-hover
            thead.bg-primary
                tr
                    th Patient name
                    th Date Created
                    th Date Last Modified
                    th Order Status
                    th Report Status
                    th Report Created 
                    th Report Last Modified 
                    th Actions 
            tbody
                each order in orders
                    +renderOrderRow(order)

block globalcontent
    #update-order-dialog.modal.fade
        .modal-dialog
            .modal-content
                .modal-header.bg-primary
                    button.close(type="button", data-dismiss="modal" aria-hidden="true") &times;
                    h4.modal-title Update Order
                .modal-body
                    | &nbsp;
                .modal-footer
                    button.btn.btn-default(type="button", data-dismiss="modal") Cancel
                    | &nbsp;
                    button#btn-update-order.btn.btn-primary(type="button") Update order

    #update-test-results-dialog.modal.fade
        .modal-dialog.modal-lg
            .modal-content
                .modal-header.bg-primary
                    button.close(type="button", data-dismiss="modal" aria-hidden="true") &times;
                    h4.modal-title Update Test Results
                .modal-body
                    .table-responsive
                        table.table.table-bordered.table-striped.table-hover
                            thead.bg-primary
                                tr
                                    th Test
                                    th Value
                                    th Unit
                                    th Lower limit
                                    th Upper Limit
                            tbody
                .modal-footer
                    button.btn.btn-default(type="button", data-dismiss="modal") Cancel
                    | &nbsp;
                    button#btn-update-test-results.btn.btn-primary(type="button") Update Test Results
                    button#btn-freeze-report.btn.btn-primary(type="button") Freeze Report