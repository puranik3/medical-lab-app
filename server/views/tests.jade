extends layout

block content
    .page-header
        h1=pageHeader
    
    .table-responsive
        table.table.table-bordered.table-striped.table-hover
            thead.bg-primary
                tr
                    th Name
                    th Lower Limit
                    th Upper Limit
                    th Units
            tbody
                each test in tests
                    tr
                        td=test.name
                        td=test.lower_limit
                        td=test.upper_limit
                        td=test.units